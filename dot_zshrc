# Source modular configuration files
# ----------------------------------
ZSH_CONFIG_DIR="${XDG_CONFIG_HOME:-$HOME/.config}/zsh"

if [[ -d "$ZSH_CONFIG_DIR" ]]; then
  for config_file in "$ZSH_CONFIG_DIR"/*.zsh; do
    source "$config_file"
  done
  unset config_file
fi

unset ZSH_CONFIG_DIR # Clean up the directory variable
